{
  "appId": "com.example.ElectronAutoUpdate",
  "productName": "Employee management", 
  "publish":{
    "provider":"github",
    "token":"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"
  },
  "asar": false,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!**/*.map",
    "!package.json",
    "!package-lock.json"
  ],
  "extraResources": [
    {
      "from": "dist",
      "to": "app",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "icon": "dist/assets/icons",    
    "target": [
      "nsis"
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
